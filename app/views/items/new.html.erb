<h1> Add a new item </h1>
<%= form_for @item, html: {multipart: true} do |f| %>
	<%= f.label(:name)%>
	<%= f.text_field(:name)%>
	<br/>
	<%= f.label(:price)%> 
	$<%= f.text_field(:price)%>
	<br/>
	<%= f.label(:description)%>
	<%= f.text_field(:description)%>
	<br/>
	<%= f.label(:image)%>
	<%= f.file_field(:image)%>
	<br/>
	<%= f.label(:category_id) %>
	<%= f.select(:category_id, Category.all.collect {|c| [ c.name, c.id ] })%>
	<br/>
	<%= f.submit("Submit")%>
<%end%>