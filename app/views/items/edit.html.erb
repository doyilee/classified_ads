<h1> Edit an existing item </h1>
<%= form_for @item do |f| %>
	<%= f.label(:name)%>
	<%= f.text_field(:name)%>
	<br/>
	<%= f.label(:price)%> 
	$<%= f.text_field(:price)%>
	<br/>
	<%= f.label(:description)%>
	<%= f.text_field(:description)%>
	<br/>
	<%= f.label(:category_id) %>
	<%= f.select(:category_id, options_for_select(['Vehicle', 'Housing', 'Jobs', 'General']))%>
	<!-- ("category", "category_id", Person.all.collect {|p| [ p.name, p.id ] }, { include_blank: true }) -->
	<%= f.submit("Submit")%>
<%end%>