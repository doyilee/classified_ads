

<div class="container">
	<div class="row text-center">
		<% @categories.each do |cat| %>
	  	<div class="col-xs-12 col-sm-6 col-md-2 col-lg-1">
				<table  class = "table table-hover">
					<tr class= "success">
						<td class = "full_circle"><%= link_to("#{cat.name}", edit_category_path(cat.id)) %></td>
					</tr>
					<br>
					<tr class = "danger">
						<td class = "halves"><%= link_to("Edit", edit_category_path(cat.id)) %></td>
					</tr>
				</table>
			</div>
		<% end %>
	</div>
</div>
